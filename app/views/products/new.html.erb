<h2>Create New Product</h2>
<%= form_for(@product, html: {multipart: true}) do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
</p>

<p>
  <%= f.label :number %>
  <%= f.text_field :number, required: true %>
</p>
<p>
  <%= f.label :category %>
  <%= f.collection_select( :category_ids, @categories, :id, :name, :multiple => true, :prompt => 'Select') %>
</p>

<p>
  <%= f.label :price %>
  <%= f.text_field :price, required: true %>
</p>

<p>
  <%= f.label :image %>
  <%= f.cl_image_upload :image %>

<%= f.submit %>

<% end %>
