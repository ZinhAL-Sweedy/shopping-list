<!-- the product index  -->
<h2> Products Index</h2>
<ol>
  <% @products.each do |product| %>
  <li>
    <a href="/products/<%= product.id %>"><%= product.name %></a>

  </li>
  <% end %>
</ol>
<!-- user the bootstrap search functionality -->
<div class="input-group">
  <%= form_tag(categories_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Categories", class: 'form-control' %>
    <span class="input-group-btn">
      <%= submit_tag "Search", class: 'btn btn-primary btn btn-default btn btn-success' %>
    </span>
  <% end %>
</div>
<br>
<%= link_to "Back", :back , class: "btn btn-default btn btn-default btn-lg active btn btn-success"%>
